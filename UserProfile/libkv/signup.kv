#:kivy 2.2.1
<SignUp>:
    name: "signup"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color:1, 0.7529, 0.7961
        padding: dp(25)
        spacing: dp(25)
       # md_bg_color: 1, 1, 1, 1
        radius: 0, 0, dp(150), dp(150)
        
        FitImage:
            source: 'assets/image/logo.png'
            # pos_hint: {'center_x': 0.5, 'center_y': 0.10}
            allow_strech: True
        
        MDBoxLayout:
            orientation: "vertical"
      

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(15)
            spacing: dp(15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDTextField:
                id: username
                hint_text: 'UserName'
                icon_right: "account"
            MDTextField:
                id: email
                hint_text: 'Email'
                icon_right: "email"
                helper_text: "user@gmail.com"
                validator: "email"
            MDTextField:
                id: password
                hint_text: 'Password'
                icon_right: "lock"
                elevation: 4
                password: True

            MDTextField:
                id: confirm_password
                hint_text: 'Confirm Password'
                icon_right: "lock"
                elevation: 4
                password: True
        RelativeLayout:
            size_hint_y: .75
            MDRoundFlatButton:
                text: "SIGN UP"
                pos_hint: {"center_y": .7, "center_x": .5}
                on_release: root.manager.current = "login"
                # on_release: app.login()           
            MDTextButton:
                text: "have an account Login?"
                color: app.theme_cls.primary_color
                pos_hint: {"center_y": .2, "center_x": .5}
                on_release: root.manager.current = "login"

        
               
