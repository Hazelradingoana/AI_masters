#:kivy 2.2.1
<Login>:
    name: "login"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color:1, 0.7529, 0.7961
        
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(25)
            spacing: dp(25)
            md_bg_color: 1, 1, 1, 1
            radius: 0, 0, dp(130), dp(130)

            FitImage:
                source: 'assets/image/logo.png'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.4
                allow_strech: True
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(35)
                # padding: dp(20), dp(10), dp(20), dp(100)
                radius: 0, 0, dp(150), dp(150)

                MDTextField:
                    id: email
                    hint_text: 'Email'
                    icon_right: "email"
                    helper_text: "user@gmail.com"
                    validator: "email"

                    # required: True

                MDTextField:
                    id: password
                    hint_text: 'Password'
                    icon_right: "lock"
                    elevation: 4
                    password: True
                    # required: True
       
            # MDLabel:
            #     id: login_label
            #     text: "Dont have an account? Sign up?"
            #     halign: "center"
            #     theme_text_color: "Secondary"
        RelativeLayout:
            size_hint_y: .75
            MDRoundFlatButton:
                text: "LOGIN"
                pos_hint: {"center_y": .5, "center_x": .5}
                on_release: root.manager.current = "mainscreen"
                # on_release: app.login()           
            MDTextButton:
                text: "Dont have an account Sign up?"
                color: app.theme_cls.primary_color
                pos_hint: {"center_y": .2, "center_x": .5}
                on_release: root.manager.current = "signup"

        
               
