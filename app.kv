#:kivy 2.2.1
WindowManager:
    LoginScreen:
    SignUpScreen:
    QuizScreen:

<LoginScreen>:
    name: "login_screen"

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color:1, 0.7529, 0.7961
        Image:
            id: logo
            source: "assets/image/logo-removebg-preview.png"
            size_hint: 0.8, 0.8
            size: self.texture_size
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(25)
            spacing: dp(25)
            md_bg_color: 0, 0, 0, 0
            radius: 0, 0, dp(130), dp(130)
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(25)
                # padding: dp(20), dp(10), dp(20), dp(100)
                radius: 0, 0, dp(50), dp(50)


                MDLabel:
                    id: logo
                    text: "TechHer"
                    halign: "center"
                    

                MDTextField:
                    id: email_input
                    hint_text: "Email"
                    helper_text_mode: "on_focus"
                    icon_right: "email"
                    mode: 
                    required: True
                    size_hint_x: 0.7
                    pos_hint: {"center_x": 0.5,"center_y": 0.5}
            
                MDTextField:
                    id: password_input
                    hint_text: "Password"
                    helper_text_mode: "on_focus"
                    icon_right: "lock"
                    required: True
                    password: True
                    size_hint_x: 0.7
                    pos_hint: {"center_x": 0.5}

                MDLabel:
                    id: login_error
                    text: ""
                    theme_text_color: "Error"
                    halign: "center"

                MDRaisedButton:
                    text: "Login"
                    size_hint_x: 0.5
                    pos_hint: {"center_y": .5, "center_x": .5}
                    on_release: root.do_login()

                MDRaisedButton:
                    text: "Sign Up"
                    size_hint_x: 0.5
                    pos_hint: {"center_x": 0.5}
                    on_release: app.root.current = "signup_screen"

<SignUpScreen>:
    name: "signup_screen"

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color:1, 0.7529, 0.7961
        padding: dp(25)
        spacing: dp(25)
        radius: 0, 0, dp(150), dp(150)
        
        MDTextField:
            id: username_input
            hint_text: "Firstname"
            helper_text_mode: "on_focus"
            icon_right: "account"
            required: True
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: surname_input
            hint_text: "Surname"
            helper_text_mode: "on_focus"
            icon_right: "account"
            required: True
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: email_input
            hint_text: "Email"
            helper_text_mode: "on_focus"
            helper_text: "user@gmail.com"
            icon_right: "email"
            validator: "email"
            required: True
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
        MDTextField:
            id: password_input
            hint_text: "Password"
            helper_text_mode: "on_focus"
            required: True
            icon_right: "lock"
            password: True
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

        MDLabel:
            id: signup_error
            text: ""
            theme_text_color: "Error"
            halign: "center"

        MDRaisedButton:
            text: "Sign Up"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_release: root.do_signup()

<QuizScreen>:
    name: "quiz_screen"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Set background color (pink)
            Rectangle:
                pos: self.pos
                size: self.size
        
        MDLabel:
            id: tech_label
            text: "CAREER QUIZ"
            # theme_text_color: "Error"
            halign: "center"

        Scatter:
            Image:
                id: logo
                source: "assets/image/logo.png"
                size_hint: 0.8, 0.8
                size: self.texture_size
        BoxLayout:
            orientation: "vertical"


            MDRaisedButton:
                text: "Start Quiz"
                size_hint_x: 0.5
                pos_hint: {"center_x": 0.5,"center_y": 0.7}
                on_release: app.show_next_question()

        MDNavigationDrawer:

            BoxLayout:
                orientation: "vertical"

                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: "About"
                            IconLeftWidget:
                                icon: "information"
                        OneLineIconListItem:
                            text: "Exit"
                            IconLeftWidget:
                                icon: "exit-to-app"
                                on_release: app.stop()
