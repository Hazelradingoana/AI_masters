#:kivy 2.2.1
ScreenManager:
    Screen:
        name: "init"
        BoxLayout:
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: 1, 0.7529, 0.7961, 0.6 # Adjust the RGBA values to set your desired background color
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
                    
            MDLabel:
                text: "AI_MASTERS"
                color: app.theme_cls.primary_color
                halign: "center"
                markup: True
                font_style: "H4"

        BoxLayout:
            orientation: "vertical"
            RelativeLayout:
                size_hint_y: .4
                MDProgressBar:
                    id: spinner
                    type: "determinate"
                    size_hint_x:.5
                    size_hint_y: None
                    height: dp(2)
                    pos_hint:{"center_x": .5, "center_y": .1}
                    on_kv_post:
                        self.start()

    Screen:
        id: manager
        name: "manager"
